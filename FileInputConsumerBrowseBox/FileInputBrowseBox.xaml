<UserControl x:Class="FileInputBox.FileInputBrowseBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileInputBox"
             x:Name="root"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="600">
    <DockPanel>
        <Button x:Name="theButton" DockPanel.Dock="Right" Click="theButton_Click" 
                ToolTip="Click to Browse" Margin="2" Width="32" Height="32">
            <Image Source="pack://application:,,,/FileInputConsumerBrowseBox;component/Resources/Icons/open.png" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1,1,1,1" Width="28" Height="28" RenderTransformOrigin="0.525,0.484" MinWidth="28" MinHeight="28" UseLayoutRounding="True" SnapsToDevicePixels="True" Stretch="UniformToFill" Cursor="Hand"/>
        </Button>
        <TextBox x:Name="theTextBox" MinWidth="{Binding ActualWidth, ElementName=theButton}" 
                 Text="{Binding FileName, ElementName=root}" Margin="2,2,2,2"
                 ToolTip="Enter in the location and name of a file or click Browse to find it." Height="32"/>
    </DockPanel>
</UserControl>